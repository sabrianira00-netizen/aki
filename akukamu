    <script>
        // Add floating petals effect
        document.addEventListener('DOMContentLoaded', function() {
            const body = document.querySelector('body');
            const colors = ['#f9a8d4', '#f472b6', '#ec4899', '#db2777'];
            
            for (let i = 0; i < 15; i++) {
                createPetal();
            }
            
            function createPetal() {
                const petal = document.createElement('div');
                const size = Math.random() * 20 + 10;
                const color = colors[Math.floor(Math.random() * colors.length)];
                
                petal.style.width = `${size}px`;
                petal.style.height = `${size}px`;
                petal.style.background = color;
                petal.style.position = 'absolute';
                petal.style.borderRadius = '50%';
                petal.style.opacity = Math.random() * 0.6 + 0.2;
                petal.style.top = `${Math.random() * 100}vh`;
                petal.style.left = `${Math.random() * 100}vw`;
                
                body.appendChild(petal);
                
                animatePetal(petal);
            }
            
            function animatePetal(petal) {
                const duration = Math.random() * 10 + 10;
                const xMovement = Math.random() * 100 - 50;
                
                petal.animate([
                    { transform: 'translateY(0) rotate(0deg)' },
                    { transform: `translateY(${window.innerHeight}px) rotate(${xMovement}deg)` }
                ], {
                    duration: duration * 1000,
                    iterations: Infinity
                });
            }
        });
    </script>
</body>
